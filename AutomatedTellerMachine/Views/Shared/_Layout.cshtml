@using System
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Project Aurora</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div id="header">
        <div class="container">
            <div class="container" style="margin-top: 200px;">
                <ul id="menu">
                    <li id="home" style="padding-left: 150px; padding-right: 20px;">
                        <a href='@Url.Action("Index", "Home")'>Home</a>
                    </li>
                    <li id="news" style="padding-right: 20px;">
                        <a href='@Url.Action("NewsPageTemp", "NewsModels")'>News</a>
                    </li>
                    <li id="catalog" style="padding-right: 20px;">
                        <a href='@Url.Action("GameCatalogTemp", "GameInfoes")'>Catalog</a>
                    </li>
                    <li id="forum" style="padding-right: 20px;">
                        <a href='@Url.Action("Index", "ForumModels")'>Forum</a>
                    </li>
                    <li id="profile" style="padding-right: 20px;">
                        <a href='@Url.Action("Details", "CheckingAccount")'>Profile</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content panel-body dingo">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Project Aurora</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
